}

<h2>Editar</h2>

<form action="@Url.Action("Editar", "Banco")" method="post" id="frmBanco">

    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Banco</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id_Banco)

