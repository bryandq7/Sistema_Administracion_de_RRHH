@section scripts {

    <script>

        $('#tablaConceptoAplicado').DataTable({
            "pageLength": 5,
            lengthMenu: [5, 10, 20, 50, 100, 200, 500],
            language: {
                search: "Buscar en tabla: ",
                lengthMenu: "Mostrar  _MENU_  entradas",
                info: "Mostrando de la entrada _START_ a la _END_ de _TOTAL_ entradas",
                infoEmpty: "Mostrando de la entrada 0 a la 0 de 0  entradas",
                infoFiltered: "(filtrando de  _MAX_ entradas totales)",
                infoPostFix: "",
                loadingRecords: "Agregando entradas",
                zeroRecords: "No existen entradas disponibles para esta búsqueda",
                emptyTable: "No existe data disponible para esta tabla",

                paginate: {
                    first: "Primera",
                    previous: "Anterior",
                    next: "Siguiente",
                    last: "Ultima"
                }
            }

        });



        function EliminarConceptoAplicado(id) {
            $.confirm({
                title: 'Eliminar Concepto',
                content: '¿Desea Eliminar el Concepto?',
                buttons: {
                    Eliminar: function () {
                        LoadingOverlayShow("#tablaConceptoAplicado");
                        $.ajax({
                            url: "/ConceptoAplicado/Eliminar",
                            type: "post",
                            data: { identificador: id }
                        }).done(function (response) {
                            console.log(response);//
                            LoadingOverlayHide("#tablaConceptoAplicado");
                            if (response.ok) {
                                alert("Concepto eliminado correctamente.");
                                window.location = response.toRedirect;
                            }
                            else {
                                alert(response.msg);
                            }
                        }).fail(function (jqXHR, textStatus, errorThrown) {
                            LoadingOverlayHide("#tablaConceptoAplicado");
                            alert(textStatus);
                        });
                    },
                    Cancelar: function () {
                        //$.alert('Canceled!');
                    },
                }
            });
        }

    </script>
